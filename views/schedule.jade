extends layout

block content
  #content
    table.schedule
      - for (neighbourhood in pubs)
        - for (var i = 0; i < pubs[neighbourhood].length; i++)
          tr
            td.venue
              .dots
                .field
                  a(href="http://maps.google.com/?q=" + pubs[neighbourhood][i].address)
                    = pubs[neighbourhood][i].name
            td.time
              .dots
                .field
                  = pubs[neighbourhood][i].time
